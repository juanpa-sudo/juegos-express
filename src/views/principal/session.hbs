{{> navegacion}}

<div class="container p-4 body-session">

    <div class="card shadow mx-auto login">
        <div class="card-header">
            <h1 class="text-center">Registrarse</h1>
        </div>
        <div class="card-body">
            <form action="" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Correo Electronico:</label>
                    <input type="email" name="email" id="email" class="form-control"
                        placeholder="Ingresa Tu Correo Electronico">
                </div>

                <div class="mb-3">
                    <label for="contra" class="form-label">Cotraseña:</label>
                    <input type="password" name="contra" id="contra" class="form-control"
                        placeholder="Ingresa Tu Contraseña">
                </div>


                <div class="d-grid">
                    <input type="submit" value="Iniciar Sección" class="btn btn-primary fw-bold text-uppercase">
                </div>
            </form>
        </div>
        <div class="card-footer">
            <p class="text-center text-white text-capitalize fs-3 fw-bold">Tus Datos Son Protegidos</p>
        </div>
    </div>

</div>